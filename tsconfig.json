{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src*"],
      "@/*": ["./src*"]
    },
    "types": ["@types/node", "@types/jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".nuxt", "dist", "src/**/*.spec.ts"]
}
